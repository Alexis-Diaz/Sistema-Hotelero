@model SysHotel.EL.Habitacion

@{
    ViewBag.Title = "Detailles de la habitación";
}

<div class="container">
    <div class="row">
        <div class="col s12 m6">
            <h4>Detalles</h4>
            <hr />
            <div class="card blue lighten-5">
                <div class="card-image">
                    @if (!string.IsNullOrEmpty(Model.Imagen))
                    {
                        <img src="@Url.Content(Model.Imagen)"/>
                    }
                    else
                    {
                        <img src="~/Content/Img/Habitaciones/vacio.jpg"/>
                    }
                </div>
                <div class="card-content grey-text text-darken-4">
                    <span class="card-title">Descripción de la habitación seleccionada</span>
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.NumeroHabitacion):</strong>
                        @Html.DisplayFor(model => model.NumeroHabitacion)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.Descripcion):</strong>
                        @Html.DisplayFor(model => model.Descripcion)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.NumeroCamas):</strong>
                        @Html.DisplayFor(model => model.NumeroCamas)
                    </p>
                    <br />
                    <p>
                        <strong> @Html.DisplayNameFor(model => model.TVCable):</strong>
                        @Html.DisplayFor(model => model.TVCable)
                    </p>
                    <br />
                    <p>
                        <strong> @Html.DisplayNameFor(model => model.Wifi):</strong>
                        @Html.DisplayFor(model => model.Wifi)
                    </p>
                    <br />
                    <p>
                        <strong> @Html.DisplayNameFor(model => model.AireAcondicionado):</strong>
                        @Html.DisplayFor(model => model.AireAcondicionado)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.Precio):</strong>
                        @Html.DisplayFor(model => model.Precio)
                    </p>
                    <br />
                    <p>
                        <strong> @Html.DisplayNameFor(model => model.TipoDeHabitacion.TipoDeHabitacion):</strong>
                        @Html.DisplayFor(model => model.TipoDeHabitacion.TipoDeHabitacion)
                    </p>
                    <br />
                </div>
                <div class="card-action">
                    <a class="btn waves-effect waves-light light-blue lighten- white-text" href="~/Habitacion/Edit/@Model.IdHabitacion">Editar habitación</a>
                </div>
            </div>

        </div>

        <div class="col s6">

        </div>
    </div>
    <a href="~/Habitacion"><i class="material-icons">undo</i> Regresar a la lista</a>
</div>