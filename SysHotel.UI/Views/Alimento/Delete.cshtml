@model SysHotel.EL.Alimento

@{
    ViewBag.Title = "Eliminar alimento";
}
<div class="container">
    <div class="row">
        <div class="col s6">
            <h4>Eliminar</h4>
            @if (ViewBag.Message != null)
            {
                string clase = "";
                switch (ViewBag.Message)
                {
                    case "Error crítico, no fué posible eliminar el alimento.":
                        clase = "alert-danger";
                        break;

                    case "Ocurrió un error, el alimento a eliminar no existe.":
                        clase = "alert-info";
                        break;
                    case "Se recibió un identificador incorrecto.":
                        clase = "alert-info";
                        break;
                }
                <div id="closeAlertLogin" class=@clase> <strong>@ViewBag.Message</strong><span onclick="closeAlertFunction( );" class="right spanClose">&#10060;</span></div>
            }
            <hr />
            <div class="card blue lighten-5">
                <div class="card-image">
                    @if (!string.IsNullOrEmpty(Model.Imagen))
                    {
                        <img src="@Url.Content(Model.Imagen)" />
                    }
                    else
                    {
                        <img src="~/Content/Img/Alimentos/vacio.jpg" />
                    }
                </div>
                <div class="card-content grey-text text-darken-4">
                    <span class="card-title">¿Seguro que deseas eliminar este alimento?</span>
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.Nombre):</strong>
                        @Html.DisplayFor(model => model.Nombre)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.proveedor.NombreEmpresa):</strong>
                        @Html.DisplayFor(model => model.proveedor.NombreEmpresa)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.Descripcion):</strong>
                        @Html.DisplayFor(model => model.Descripcion)
                    </p>
                    <br />
                    <p>
                        <strong> @Html.DisplayNameFor(model => model.categorialimento.NombreCategoria):</strong>
                        @Html.DisplayFor(model => model.categorialimento.NombreCategoria)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.Precio):</strong>
                        @Html.DisplayFor(model => model.Precio)
                    </p>
                    <br />
                </div>
                <div class="card-action">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn waves-effect waves-light red lighten-1 white-text">Eliminar</button>
                    }
                </div>
            </div>
        </div>

        <div class="col s6">

        </div>
    </div>
    <a href="~/Alimento"><i class="material-icons">undo</i> Regresar a la lista</a>
</div>
