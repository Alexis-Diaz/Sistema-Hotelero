@model SysHotel.EL.Alimento

@{
    ViewBag.Title = "Detalles del alimento";
}

<div class="container">
    <div class="row">
        <div class="col s12 m6">
            <h4>Detalles</h4>
            <hr />
            <div class="card blue lighten-5">
                <div class="card-image">
                    @if (!string.IsNullOrEmpty(Model.Imagen))
                    {
                        <img src="@Url.Content(Model.Imagen)"/>
                    }
                    else
                    {
                        <img src="~/Content/Img/Alimentos/vacio.jpg"/>
                    }
                </div>
                <div class="card-content grey-text text-darken-4">
                    <span class="card-title">Descripción del alimento seleccionado</span>
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.Nombre):</strong>
                        @Html.DisplayFor(model => model.Nombre)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.proveedor.NombreEmpresa):</strong>
                        @Html.DisplayFor(model => model.proveedor.NombreEmpresa)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.Descripcion):</strong>
                        @Html.DisplayFor(model => model.Descripcion)
                    </p>
                    <br />
                    <p>
                        <strong> @Html.DisplayNameFor(model => model.categorialimento.NombreCategoria):</strong>
                        @Html.DisplayFor(model => model.categorialimento.NombreCategoria)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.Precio):</strong>
                        @Html.DisplayFor(model => model.Precio)
                    </p>
                    <br />
                </div>
                <div class="card-action">
                    <a class="btn waves-effect waves-light light-blue lighten- white-text" href="~/Alimento/Edit/@Model.IdAlimento">Editar alimento</a>
                </div>
            </div>

        </div>

        <div class="col s6">

        </div>
    </div>
    <a href="~/Alimento"><i class="material-icons">undo</i> Regresar a la lista</a>
</div>