@model SysHotel.EL.Cliente

@{
    ViewBag.Title = "Eliminar cliente";
}

<div class="container">
    <div class="row">
        <div class="col s6">
            <h4>Eliminar</h4>
            @if (ViewBag.Message != null)
            {
                string clase = "";
                switch (ViewBag.Message)
                {
                    case "Error crítico, no fué posible eliminar el cliente.":
                        clase = "alert-danger";
                        break;

                    case "Ocurrió un error, el cliente a eliminar no existe.":
                        clase = "alert-info";
                        break;
                    case "Se recibió un identificador incorrecto.":
                        clase = "alert-info";
                        break;
                }
                <div id="closeAlertLogin" class=@clase> <strong>@ViewBag.Message</strong><span onclick="closeAlertFunction( );" class="right spanClose">&#10060;</span></div>
            }
            <hr />
            <div class="card blue lighten-5">
                <div class="card-content grey-text text-darken-4">
                    <span class="card-title">¿Seguro que deseas eliminar este cliente?</span>
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.Nombres):</strong>
                        @Html.DisplayFor(model => model.Nombres)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.Apellidos):</strong>
                        @Html.DisplayFor(model => model.Apellidos)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.FechaNacimiento):</strong>
                        @Html.DisplayFor(model => model.FechaNacimiento)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.TipoDocumento):</strong>
                        @Html.DisplayFor(model => model.TipoDocumento)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.NumeroDocumento):</strong>
                        @Html.DisplayFor(model => model.NumeroDocumento)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.Telefono):</strong>
                        @Html.DisplayFor(model => model.Telefono)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.Correo):</strong>
                        @Html.DisplayFor(model => model.Correo)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.Direccion):</strong>
                        @Html.DisplayFor(model => model.Direccion)
                    </p>
                    <br />
                </div>
                <div class="card-action">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn waves-effect waves-light red lighten-1 white-text">Eliminar</button>
                    }
                </div>
            </div>
        </div>

        <div class="col s6">

        </div>
    </div>
    <a href="~/Cliente"><i class="material-icons">undo</i> Regresar a la lista</a>
</div>