@model SysHotel.EL.Reservacion

@{
    ViewBag.Title = "Marcar reservación";
}
<div class="container">
    <div class="row">
        <div class="col s12 m8">
            <h2>Marcar</h2>
            <h3>¿Deseas marcar de recibido está reservación?</h3>
            <h4>Detalles</h4>
            <hr />
            <div class="card blue lighten-5">
                <div class="card-content grey-text text-darken-4">
                    <span class="card-title">Descripción de la reservación</span>
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.habitacion.NumeroHabitacion):</strong>
                        @Html.DisplayFor(model => model.habitacion.NumeroHabitacion)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.FechaReservacion):</strong>
                        @Html.DisplayFor(model => model.FechaReservacion)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.cliente.Nombres):</strong>
                        @Html.DisplayFor(model => model.cliente.Nombres)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.cliente.Apellidos):</strong>
                        @Html.DisplayFor(model => model.cliente.Apellidos)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.DiaEntrada):</strong>
                        @Html.DisplayFor(model => model.DiaEntrada)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.DiaSalida):</strong>
                        @Html.DisplayFor(model => model.DiaSalida)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.NumeroPersonas):</strong>
                        @Html.DisplayFor(model => model.NumeroPersonas)
                    </p>
                    <br />
                    <p>
                        <strong>Registró:</strong>
                        @Html.DisplayFor(model => model.usuario.NombreUsuario)
                    </p>
                    <br />
                    <br />
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Marcar" class="btn btn-default" />
                        </div>
                    }
                </div>
              
            </div>

        </div>

        <div class="col s12 m4">

        </div>
    </div>
    <a href="~/Index"><i class="material-icons">undo</i> Regresar a la lista</a>
</div>