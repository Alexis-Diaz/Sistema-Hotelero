@model SysHotel.EL.Usuario

@{
    ViewBag.Title = "Detalles del usuario";
}

<div class="container">
    <div class="row">
        <div class="col s6">
            <h4>Detalles</h4>
            <hr />
            <div class="card blue lighten-5">
                <div class="card-content grey-text text-darken-4">
                    <span class="card-title">Descripción del usuario seleccionado</span>
                    <p>
                        <strong> @Html.DisplayNameFor(model => model.Nombres):</strong>
                        @Html.DisplayFor(model => model.Nombres)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.Apellidos):</strong>
                        @Html.DisplayFor(model => model.Apellidos)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.FechaNacimiento):</strong>
                        @Html.DisplayFor(model => model.FechaNacimiento)
                    </p>
                    <br />
                    <p>
                        <strong> @Html.DisplayNameFor(model => model.Direccion):</strong>
                        @Html.DisplayFor(model => model.Direccion)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.Telefono):</strong>
                        @Html.DisplayFor(model => model.Telefono)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.DUI):</strong>
                        @Html.DisplayFor(model => model.DUI)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.Correo):</strong>
                        @Html.DisplayFor(model => model.Correo)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.NombreUsuario):</strong>
                        @Html.DisplayFor(model => model.NombreUsuario)
                    </p>
                    <br />
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.rolUsuario.Rol):</strong>
                        @Html.DisplayFor(model => model.rolUsuario.Rol)
                    </p>
                    <br />
                </div>
                <div class="card-action">
                    <a class="btn waves-effect waves-light light-blue lighten- white-text" href="~/Usuario/Edit/@Model.IdUsuario">Editar usuario</a>
                </div>
            </div>

        </div>

        <div class="col s6">

        </div>
    </div>
    <a href="~/Usuario"><i class="material-icons">undo</i> Regresar a la lista</a>
</div>